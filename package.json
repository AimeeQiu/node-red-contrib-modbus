{
  "name": "node-red-contrib-modbus",
  "version": "2.0.1-alpha.0",
  "private": true,
  "description": "The all in one Modbus TCP and Serial contribution package for Node-RED.",
  "dependencies": {
    "debug": "3.0.1",
    "jsmodbus": "2.1.2",
    "modbus-serial": "5.4.1",
    "serialport": "5.0.0",
    "stampit": "2.1.2",
    "stately.js": "1.3.0",
    "vm2": "3.5.0"
  },
  "keywords": [
    "node-red",
    "modbus",
    "Modbus",
    "tcp",
    "serial",
    "server",
    "client",
    "slave",
    "master",
    "rtu",
    "ascii",
    "ASCII",
    "C701",
    "telnet",
    "rtu buffered",
    "flexible read",
    "flexible write",
    "contrib",
    "modbus serial",
    "modbus tcp",
    "modbus slave",
    "modbus master",
    "modbus-serial",
    "node-modbus"
  ],
  "engines": {
    "node": "4.x || 6.x"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/biancode/node-red-contrib-modbus.git"
  },
  "node-red": {
    "nodes": {
      "Modbus-Client": "modbus/modbus-client.js",
      "Modbus-Response": "modbus/modbus-response.js",
      "Modbus-Read": "modbus/modbus-read.js",
      "Modbus-Getter": "modbus/modbus-getter.js",
      "Modbus-Flex-Getter": "modbus/modbus-flex-getter.js",
      "Modbus-Write": "modbus/modbus-write.js",
      "Modbus-Flex-Write": "modbus/modbus-flex-write.js",
      "Modbus-Server": "modbus/modbus-server.js",
      "Modbus-Flex-Server": "modbus/modbus-flex-server.js",
      "Modbus-Queue-Info": "modbus/modbus-queue-info.js",
      "Modbus-Flex-Connector": "modbus/modbus-flex-connector.js"
    }
  },
  "author": "Klaus Landsdorf",
  "license": "BSD-3-Clause",
  "main": "node",
  "files": [
    "modbus"
  ],
  "bugs": {
    "url": "https://github.com/biancode/node-red-contrib-modbus/issues/"
  },
  "homepage": "https://biancode.github.io/node-red-contrib-modbus/",
  "scripts": {
    "test": "standard --fix && mocha test/*",
    "build": "standard --fix && gulp publish",
    "prepublish": "npm run build && npm test",
    "release": "standard-version"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "eslint": "^4.7.2",
    "eslint-config-standard": "^10.2.1",
    "eslint-config-standard-jsx": "^4.0.2",
    "eslint-plugin-mocha": "^4.11.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^7.3.0",
    "eslint-plugin-standard": "^3.0.1",
    "gulp": "^3.9.1",
    "gulp-clean": "^0.3.2",
    "gulp-htmlmin": "^3.0.0",
    "gulp-jsdoc3": "^1.0.1",
    "gulp-uglify": "^3.0.0",
    "jasmine-node": "^1.14.5",
    "js-beautify": "^1.7.3",
    "mocha": "^3.5.3",
    "nock": "^9.0.19",
    "node-red": "^0.17.5",
    "pump": "^1.0.2",
    "should": "^13.1.0",
    "sinon": "^3.3.0",
    "standard": "^10.0.3",
    "standard-version": "^4.2.0",
    "supertest": "^3.0.0",
    "when": "^3.7.8"
  },
  "directories": {
    "example": "examples",
    "test": "test"
  },
  "standard": {
    "ignore": [
      "node_modules/",
      "examples/",
      "modbus/",
      "docs",
      "test",
      "extras"
    ]
  }
}
